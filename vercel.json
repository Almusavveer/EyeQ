{
  "version": 2,
  "builds": [
    {
      "src": "Server/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "Client/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Server/app.py"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|eot|json))",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/Client/dist/index.html"
    }
  ],
  "functions": {
    "Server/app.py": {
      "runtime": "python3.9"
    }
  }
}