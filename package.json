{
  "name": "eyeq-workspace",
  "version": "1.0.0",
  "description": "EyeQ - Exam management system with speech recognition",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=frontend\" \"npm run start:backend\"",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "cd backend && python app.py",
    "build": "npm run build --workspace=frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "preview:frontend": "npm run preview --workspace=frontend",
    "start:frontend": "npm run dev --workspace=frontend",
    "start:backend": "cd backend && python app.py",
    "install:frontend": "npm install --workspace=frontend",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "install:all": "npm run install:frontend && npm run install:backend",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "rm -rf frontend/node_modules frontend/dist",
    "clean:backend": "find backend -name '__pycache__' -exec rm -rf {} +",
    "deploy:frontend": "cd frontend && npm run build",
    "deploy:backend": "cd backend && echo 'Backend ready for Render deployment'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Almusavveer/EyeQ.git"
  },
  "keywords": [
    "education",
    "exam",
    "speech-recognition",
    "react",
    "flask",
    "vercel",
    "render"
  ],
  "author": "Almusavveer",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}